{
  "name": "devcontainer-notifier",
  "displayName": "DevContainer Notifier",
  "description": "Notify host when Claude Code hooks are triggered in DevContainer",
  "version": "0.0.1",
  "publisher": "touyu",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "extensionKind": [
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/touyu/devcontainer-notifier"
  },
  "contributes": {
    "commands": [
      {
        "command": "devcontainer-notifier.triggerNotification",
        "title": "Trigger DevContainer Notification"
      },
      {
        "command": "devcontainer-notifier.sendNotification",
        "title": "Send Notification from Remote"
      }
    ],
    "configuration": {
      "title": "DevContainer Notifier",
      "properties": {
        "devcontainer-notifier.port": {
          "type": "number",
          "default": 3456,
          "description": "HTTP server port for notifications"
        },
        "devcontainer-notifier.sound": {
          "type": "string",
          "default": "Funk",
          "description": "macOS notification sound (e.g., Basso, Blow, Bottle, Frog, Funk, Glass, Hero, Morse, Ping, Pop, Purr, Sosumi, Submarine, Tink)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'No compilation needed for JavaScript'",
    "package": "vsce package",
    "build": "npm install && vsce package",
    "install-extension": "code --install-extension devcontainer-notifier-0.0.1.vsix --force "
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "node-notifier": "^10.0.1"
  }
}